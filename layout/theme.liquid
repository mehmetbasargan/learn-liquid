<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
      <link rel="apple-touch-icon" href="{{ settings.favicon | image_url: width: 180, height: 180 }}">
    {%- endif -%}

    <style>
      :root {
        --color-primary: #3b443c;
        --color-secondary: #b2ac88;
        --color-bg: #ffffff;
        --font-heading: 'Josefin Sans', sans-serif;
        --font-body: 'Inter', sans-serif;
      }

      body {
        background-color: var(--color-bg);
        color: var(--color-primary);
        font-family: var(--font-body);
        margin: 0;
        -webkit-font-smoothing: antialiased;
      }

      /* Unresolved olsa bile body'yi zorla göster */
      body[unresolved] {
        opacity: 1 !important;
        display: block !important;
        overflow: auto !important;
        position: static !important;
      }

      body {
        transition: none !important;
      }
    </style>

    {{ content_for_header }}
    {{ 'tailwind.output.css' | asset_url | stylesheet_tag }}
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
  </head>

  <body>
    <div
      id="toast-container"
      class="fixed bottom-10 left-1/2 -translate-x-1/2 z-[200] space-y-2 pointer-events-none"
    ></div>

    {% sections 'header-group' %}
    {% render 'cart-drawer' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    <script src="{{ 'theme.js' | asset_url }}" defer></script>
    <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>
    <script>
      document.addEventListener('submit', function (e) {
        // Sepete ekle formunu yakala
        const isCartForm = e.target.action && e.target.action.includes('/cart/add');

        if (isCartForm) {
          e.preventDefault(); // Sayfa yönlendirmesini durdur

          const form = e.target;
          const submitButton = form.querySelector('[type="submit"]');
          const formData = new FormData(form);

          if (submitButton) {
            submitButton.classList.add('loading');
            submitButton.disabled = true;
          }

          fetch(window.Shopify.routes.root + 'cart/add.js', {
            method: 'POST',
            body: formData,
            headers: { 'X-Requested-With': 'XMLHttpRequest' },
          })
            .then((response) => {
              if (!response.ok) throw new Error('Sepete eklenemedi');
              return response.json();
            })
            .then((item) => {
              // MEHMET: Burası kritik! Hata vermemesi için kontrolleri ekledim.

              // 1. Sepet içeriğini güncelle
              if (window.updateCartDrawer && typeof window.updateCartDrawer === 'function') {
                window.updateCartDrawer();
              } else if (typeof updateCartDrawer === 'function') {
                updateCartDrawer();
              }

              // 2. Çekmeceyi aç
              if (window.openCartDrawer && typeof window.openCartDrawer === 'function') {
                window.openCartDrawer();
              } else if (typeof openCartDrawer === 'function') {
                openCartDrawer();
              } else {
                // Fonksiyonlar bulunamazsa en azından çekmeceyi ID üzerinden açmayı dene
                const drawer = document.querySelector('#cart-drawer') || document.querySelector('cart-drawer');
                if (drawer) drawer.classList.add('active');
                document.body.classList.add('cart-drawer-open');
              }

              // 3. Global event fırlat (Başka app'ler veya bölümler duysun diye)
              document.dispatchEvent(new CustomEvent('cart:updated', { detail: { cart: item } }));
            })
            .catch((error) => {
              console.error('Mehmet, sepet hatası:', error);
              alert('Ürün sepete eklenirken bir sorun oluştu.');
            })
            .finally(() => {
              if (submitButton) {
                submitButton.classList.remove('loading');
                submitButton.disabled = false;
              }
            });
        }
      });
    </script>
  </body>
</html>
