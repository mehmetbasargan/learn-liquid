<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
      <link rel="shortcut icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
      <link rel="apple-touch-icon" href="{{ settings.favicon | image_url: width: 180, height: 180 }}">
    {%- else -%}
      {% # Panelde ikon yoksa bile tarayıcının 'dünya' ikonu göstermemesi için varsa assetlerdeki faviconu çağırır %}
      <link rel="icon" type="image/png" href="{{ 'favicon.png' | asset_url }}?v={{ "now" | date: "%Y%m%d%H%M" }}">
    {%- endif -%}

    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    <style>
      :root {
        --color-primary: #3b443c;
        --color-secondary: #b2ac88;
        --color-bg: #ffffff;
        --font-heading: 'Josefin Sans', sans-serif;
        --font-body: 'Inter', sans-serif;
      }

      body {
        background-color: var(--color-bg);
        color: var(--color-primary);
        font-family: var(--font-body);
        margin: 0;
        -webkit-font-smoothing: antialiased;
      }
    </style>

    {{ content_for_header }}
    {{ 'tailwind.output.css' | asset_url | stylesheet_tag }}
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
  </head>

  <body>
    <div
      id="toast-container"
      class="fixed bottom-10 left-1/2 -translate-x-1/2 z-[200] space-y-2 pointer-events-none"
    ></div>

    {% sections 'header-group' %}
    {% render 'cart-drawer' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    <script src="{{ 'theme.js' | asset_url }}" defer></script>
    <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>
  </body>
</html>
