<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
      <link rel="apple-touch-icon" href="{{ settings.favicon | image_url: width: 180, height: 180 }}">
    {%- endif -%}

    <style>
      :root {
        --color-primary: #3b443c;
        --color-secondary: #b2ac88;
        --color-bg: #ffffff;
        --font-heading: 'Josefin Sans', sans-serif;
        --font-body: 'Inter', sans-serif;
      }

      body {
        background-color: var(--color-bg);
        color: var(--color-primary);
        font-family: var(--font-body);
        margin: 0;
        -webkit-font-smoothing: antialiased;
      }

      /* Unresolved olsa bile body'yi zorla göster */
      body[unresolved] {
        opacity: 1 !important;
        display: block !important;
        overflow: auto !important;
        position: static !important;
      }

      body {
        transition: none !important;
      }
    </style>

    {{ content_for_header }}
    {{ 'tailwind.output.css' | asset_url | stylesheet_tag }}
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
  </head>

  <body>
    <div
      id="toast-container"
      class="fixed bottom-10 left-1/2 -translate-x-1/2 z-[200] space-y-2 pointer-events-none"
    ></div>

    {% sections 'header-group' %}
    {% render 'cart-drawer' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    <script src="{{ 'theme.js' | asset_url }}" defer></script>
    <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>

    <script>
      document.addEventListener('submit', function (e) {
        // Sayfadaki herhangi bir "Sepete Ekle" formu gönderildiğinde yakala
        if (e.target.action && (e.target.action.includes('/cart/add') || e.target.action.includes('/cart/add.js'))) {
          e.preventDefault(); // Sayfanın /cart sayfasına gitmesini durdur

          const form = e.target;
          const submitButton = form.querySelector('[type="submit"]');
          const formData = new FormData(form);

          if (submitButton) submitButton.disabled = true;

          // AJAX ile sepete ekle
          fetch(window.Shopify.routes.root + 'cart/add.js', {
            method: 'POST',
            body: formData,
            headers: {
              'X-Requested-With': 'XMLHttpRequest',
            },
          })
            .then((response) => response.json())
            .then((item) => {
              // MEHMET: Ürün eklendi, şimdi Drawer'ı tetikliyoruz

              // 1. Sepet verisini güncelle (içerik dolsun)
              if (typeof updateCartDrawer === 'function') {
                updateCartDrawer();
              }

              // 2. Çekmeceyi (Drawer) aç
              if (typeof openCartDrawer === 'function') {
                openCartDrawer();
              } else {
                // Fonksiyon adın farklıysa alternatif tetikleyiciler:
                document.querySelector('cart-drawer')?.classList.add('active');
                document.querySelector('#cart-drawer')?.classList.add('active');
                document.body.classList.add('cart-drawer-open');
              }

              // Shopify'ın bazı standart temaları için event fırlat
              document.dispatchEvent(new CustomEvent('cart:updated', { detail: { cart: item } }));
            })
            .catch((error) => {
              console.error('Sepet Hatası:', error);
            })
            .finally(() => {
              if (submitButton) submitButton.disabled = false;
            });
        }
      });
    </script>
  </body>
</html>
