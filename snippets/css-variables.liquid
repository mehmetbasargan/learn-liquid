{% style %}
  :root {
    /* Dinamik Renkler - Theme Settings'den alıyoruz */
    --color-primary: {{ settings.primary_color }};
    --color-secondary: {{ settings.secondary_color }};
    --color-background: {{ settings.custom_bg_color }};
    --color-foreground: {{ settings.primary_color }};

    /* Fontlar - Eğer Google Fonts eklediysen çalışır */
    --font-primary--family: 'Inter', sans-serif;
    --font-heading--family: 'Josefin Sans', sans-serif;

    /* Layout Ayarları - Tailwind ile çakışmaması için sabit değerler */
    --page-width: 1200px;
    --page-margin: 20px;
    --style-border-radius-inputs: 4px;
  }

  /* Body için temel stil */
  body {
    background-color: var(--color-background);
    color: var(--color-foreground);
    font-family: var(--font-primary--family);
    margin: 0;
  }
{% endstyle %}
