<section class="max-w-[1440px] mx-auto px-4 md:px-10 py-12">
  <div class="flex flex-col lg:flex-row gap-12 lg:gap-10">
    {% comment %} Slider Section {% endcomment %}
    <div class="w-full md:w-full lg:w-2/3 flex flex-row gap-6 h-[600px] lg:h-[800px]">
      {% comment %} thumbnails {% endcomment %}
      <div class="hidden md:block w-20 shrink-0">
        <div class="swiper product-thumbs h-full">
          <div class="swiper-wrapper ">
            {% for media in product.media %}
              <div class="swiper-slide cursor-pointer opacity-50 transition-opacity duration-300 [&.swiper-slide-thumb-active]:opacity-100">
                {{ media | image_url: width: 200 | image_tag: class: ' object-cover' }}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>

      {% comment %} main images {% endcomment %}
      <div class="grow h-full overflow-hidden bg-[#F9F9F9]">
        <div class="swiper product-main h-full">
          <div class="swiper-wrapper h-full">
            {% for media in product.media %}
              <div class="swiper-slide h-full">
                {{
                  media
                  | image_url: width: 1500
                  | image_tag: class: 'w-full h-full object-cover object-top', loading: 'eager'
                }}
              </div>
            {% endfor %}
          </div>
          <div class="swiper-button-next text-[#3B443C] !after:text-lg"></div>
          <div class="swiper-button-prev text-[#3B443C] !after:text-lg"></div>
        </div>
      </div>
    </div>

    {% comment %} Product Info Section {% endcomment %}
    <div class="w-full md:w-[100%] lg:w-100">
      <div class="sticky top-10 space-y-8">
        <div class="space-y-2">
          <p class="text-secondary text-[14px] tracking-[0.3em] uppercase">Luvia Era Edition</p>
          <h1 class="text-primary text-3xl font-light tracking-widest uppercase">{{ product.title }}</h1>
          <p class="text-lg text-primary font-light italic">{{ product.price | money }}</p>
        </div>

        <div class="h-1 w-full bg-gray-100"></div>

        {% form 'product', product, class: 'space-y-6' %}
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

          {% unless product.has_only_default_variant %}
            <div class="space-y-4">
              {% for option in product.options_with_values %}
                <div class="product-option">
                  <label class="text-[14px] uppercase tracking-widest text-secondary mb-2 block">
                    {{ option.name }}
                  </label>
                  <div class="flex flex-wrap gap-3">
                    {% for value in option.values %}
                      <label class="cursor-pointer">
                        <input
                          type="radio"
                          name="{{ option.name }}"
                          value="{{ value }}"
                          class="peer hidden"
                          {% if option.selected_value == value %}
                            checked
                          {% endif %}
                        >
                        <span
                          class="
                            px-6 py-2 border border-gray-200 text-xs tracking-widest uppercase transition-all
                            peer-checked:border-[#3B443C] peer-checked:bg-[#3B443C] peer-checked:text-white hover:border-secondary
                          "
                        >
                          {{ value }}
                        </span>
                      </label>
                    {% endfor %}
                  </div>
                </div>
              {% endfor %}
            </div>
          {% endunless %}

          <div class="space-y-4 pt-4">
            <button
              type="submit"
              name="add"
              class="cursor-pointer w-full bg-primary text-white py-4 text-[11px] uppercase tracking-[0.3em] hover:bg-secondary transition-colors duration-500"
            >
              Sepete Ekle
            </button>
            {{ form | payment_button }}
          </div>
        {% endform %}

        <div class="pt-10">
          <div class="prose prose-sm text-pr font-light leading-relaxed">
            {{ product.description }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .product-thumbs .swiper-slide {
    height: 120px !important; /* Küçük resimlerin yüksekliği */
    width: 100% !important;
    margin-bottom: 10px; /* Aradaki boşluk */
    display: flex;
  }
  .product-thumbs {
    padding-right: 0px; /* Ana görselle çok bitişmesin */
  }

  .swiper-button-next,
  .swiper-button-prev {
    align-items: center;
    color: #3b443c;
    cursor: pointer;
    display: flex;
    height: var(--swiper-navigation-size);
    justify-content: center;
    position: absolute;
    width: var(--swiper-navigation-size);
    z-index: 10;
  }

  .swiper-button-next,
  .swiper-button-prev {
    height: 50px !important;
    width: 50px !important;
    background: #ffffff60;
    border-radius: 50%;
    padding: 15px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // 1. Küçük resimler slider'ı
    const thumbsSwiper = new Swiper('.product-thumbs', {
      direction: 'vertical',
      slidesPerView: 'auto',
      spaceBetween: 10,
      freeMode: true,
      watchSlidesProgress: true,
      loop: true,
    });

    // 2. Ana slider
    const mainSwiper = new Swiper('.product-main', {
      spaceBetween: 0,
      loop: true,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      thumbs: {
        swiper: thumbsSwiper,
      },
    });
  });
</script>

{% schema %}
{
  "name": "Ürün Detayı",
  "settings": [],
  "presets": [{ "name": "Varsayılan Ürün" }]
}
{% endschema %}
