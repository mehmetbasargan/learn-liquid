<header class="">
  {% comment %} logo {% endcomment %}
  <div class="container">
    <div class="w-full h-[80px] py-5 items-center justify-center flex">
      <a href="{{ routes.root_url }}" class=" w-[140px] lg:w-[180px] shrink-0">
        {% if section.settings.logo %}
          {{ section.settings.logo | image_url: width: 180 | image_tag: alt: shop.name }}
        {% else %}
          <span class="h2">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>
  </div>
  {% comment %} navigation {% endcomment %}
  <div class=" bg-custom-bg h-[70px] flex items-center relative">
    <div class="container flex lg:justify-between justify-end items-center">
      <div class="hidden lg:flex flex-row items-center gap-6 ">
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="nav-link hover:text-brand {% if link.current %} is-active {% endif %}">
            {{ link.title }}
          </a>
        {% endfor %}
      </div>
      <div class="flex items-center lg:gap-2 gap-8">
        <div class="flex lg:hidden">
          <button id="menu-toggle" class="group relative">
            <div id="icon-open" class="block">
              {% render 'icon-menu' %}
            </div>

            <div id="icon-close" class="hidden">
              {% render 'icon-menu-close' %}
            </div>
          </button>

          {% comment %} mobile menu {% endcomment %}
          <nav id="main-menu" class="hidden absolute top-[70px] left-0 w-full bg-custom-bg z-40 ">
            <div class="flex flex-col p-4 w-full">
              {% for link in section.settings.menu.links %}
                <a
                  href="{{ link.url }}"
                  class="nav-link py-5 border-b border-[#000000]/10 last:border-b-0 {% if link.current %} is-active {% endif %}"
                >
                  {{ link.title }}
                </a>
              {% endfor %}
            </div>
          </nav>
        </div>

        <a href="{{ routes.search_url }}" class="lg:w-[30px] w-[20px] text-black hover:text-brand">
          {% render 'icon-search' %}
        </a>
        <a href="{{ routes.account_url }}" class="lg:w-[30px] w-[20px] text-black hover:text-brand">
          {% if shop.customer_accounts_enabled %}
            {% render 'icon-account' | inline_asset_content | link_to: routes.account_url %}
          {% endif %}
        </a>
        <a href="{{ routes.cart_url }}" class="lg:w-[30px] w-[20px] text-black hover:text-brand">
          {% if cart.item_count > 0 %}
            <sup>{{ cart.item_count }}</sup>
          {% endif %}
          {% render 'icon-cart' %}
        </a>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header Two",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}

{% comment %}
  <a href="{{ routes.root_url }}" class="header__logo-link w-[150px]">
      {% if section.settings.logo %}
        {{ section.settings.logo | image_url: width: 150 | image_tag: alt: shop.name }}
      {% else %}
        <span class="h2">{{ shop.name }}</span>
      {% endif %}
    </a>

    <div class="header__menu">
      {% for link in section.settings.menu.links %}
        {{ link.title | link_to: link.url }}
      {% endfor %}
    </div>

    <div class="header__icons">
      {% if shop.customer_accounts_enabled %}
        {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
      {% endif %}

      <a href="{{ routes.cart_url }}">
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}

        {{ 'icon-cart.svg' | inline_asset_content }}
      </a>
    </div>
{% endcomment %}
